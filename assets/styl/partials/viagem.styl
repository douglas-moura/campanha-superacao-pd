  .text-block
    color: $primary;
    background-color: $secondary;
    padding: 30px;
    text-align center
    font-size 16px
    &.revense
      color: #fff;
      background-color: $primary;
    &.pale
      color: $primary;
      background-color: #fff;

  .caption {
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    text-align: center;
    color: $primary;

    span {
      color #fff
      background #000
      background rgba(0, 0, 0, 0.3)
      opacity 0.95
      padding 10px
      font-size 20px
    }
  }

  .caption span.border {
    background-color: $primary;
    color: $secondary;
    padding: 18px;
    font-size: 25px;
  }

  h3 {
    letter-spacing: 5px;
    text-transform: uppercase;
    color: $primary;
  }

  /* Turn off parallax scrolling for tablets and phones */
  @media only screen and (max-width: 1024px) {
      .bgimg-1,
      .bgimg-2,
      .bgimg-3,
      .bgimg-4,
      .bgimg-5,
      .bgimg-tripa,
      .bgimg-letras{
          background-attachment: scroll;
      }
  }
