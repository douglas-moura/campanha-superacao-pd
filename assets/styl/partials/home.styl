.home-box
  display inline-block
  position relative
  width 100%
  margin-bottom 30px
  img
    width 100%
    border-radius 10px
  p
    position absolute
    top 15px
    left 15px
  span
    color #ffffff
    text-shadow: 1px 2px rgba(0,0,0,0.5);
    display block
    letter-spacing 0.04em

  &-title
    font-size 18px
    font-weight bold
    text-transform uppercase

@media (max-width: 800px)
  .home-box span
    &.home-box-text
      display none

@media (max-width: 600px)
  .home-box span
    &.home-box-title
      font-size 14px
